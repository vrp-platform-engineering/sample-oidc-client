{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "None",
      "System.Net.Http.HttpClient": "Warning",
      "OpenIddict": "Information",
      "Quartz": "Warning",
      "Microsoft.Hosting": "Information"
    }
  },
  "Security": {
    "OIDC": {
      "Authority": "https://dev-ext-idp.envisionfinancial.ca",
      "ClientId": "poc.mvc.client",
      "ClientSecret": "POC-MVC-Secret-Change-In-Production",

      "JwtSecurityTokenMapInboundClaims": false,
      //"ClientCertificate": {
      //  "CertificatePath": "../../../.deploy/certificates/dev.vp.io.pfx",
      //  "CertificatePassword": "DevPassword123!"
      //},
      "CookieName": "oidc.cookie",
      "CookieExpiresInMinutes": 720,
      "AccessTokenExpiresInMinutes": 10,
      "RedirectUri": "https://localhost:9000/signin-oidc",
      "PostLogoutRedirectUri": "https://localhost:9000/signout-callback-oidc",
      "RequireHttpsMetadata": false,
      "ResponseType": "code",
      "SaveTokens": true,
      "SkipOIDCServerCertificateCheck": true,
      "Scopes": [
        "openid",
        "profile",
        "email",
        "roles",
        "offline_access",
        "member_id"
      ]
    }
  }
}
